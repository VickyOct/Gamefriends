                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label"><%= form.label :name%></label>
              <%=  form.text_field :name, placeholder: "Welcome"  %>
            </div>
            <div class="mb-3">
              <%= form.label :email%>
              <%= form.text_field :email, placeholder: "123456@email.com" %>
            </div>
            <div class="mb-3">
              <%= form.label :password%>
              <%= form.password_field :password, placeholder: "password" %>
            </div>


    <div class="mb-3">
    <%= form.submit "Sign up" %>
    </div>
  <% end %>

