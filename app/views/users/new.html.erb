        <div>
          <%= form_with model: @user, url: sign_up_path do |form| %></div>
            <% if @user.errors.any? %>
              <div class="alert alert-danger">
                <h2><%= pluralize(@user.errors.count, "error") %> prohibited this game from being saved:</h2>

                <ul>
                  <% @user.errors.each do |error| %>
